

:p f :: Real --o Real
   f = llam x. x
   tlinear f 2.0
> 2.0

:p f :: Real --o Real
   f = llam x. y = x; y
   tlinear f 2.0
> 2.0

:p f :: Real --o Real
   f = llam x. x + x
   tlinear f 2.0
> 4.0

:p f :: Real --o Real
   f = llam x. y = 2.0 * x
               3.0 * y + x
   tlinear f 1.0
> 7.0

:p f :: Real --o Real
   f = llam x. (2.0 + 3.0) * x
   tlinear f 1.0
> 5.0

:p f :: (Real, Real) --o Real
   f = llam z. (x, y) = z
               x + y * 2.0
   tlinear f 1.0
> (1.0, 2.0)

:p f :: Real --o (Real, Real)
   f = llam x. (x, x * 2.0)
   tlinear f (1.0, 3.0)
> 7.0
